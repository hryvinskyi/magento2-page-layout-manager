<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="design">
        <field name="page_layout" formElement="select" class="Magento\Cms\Ui\Component\Form\Field\PageLayout">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Layout</label>
                <dataScope>page_layout</dataScope>
                <notice translate="true">Entity-specific layout selection has been removed. Layout is managed globally.</notice>
                <disabled>true</disabled>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Cms\Model\Page\Source\PageLayout"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>
